<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
android:layout_width="match_parent" android:layout_height="match_parent"
tools:context="rhyme.a.is.nine.foodmanager.gui.RecipeActivity" tools:ignore="MergeRootFrame">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Zutaten"
        android:id="@+id/textzutaten"
        android:textSize="23dp"
        android:layout_below="@+id/duration"
        android:layout_alignLeft="@+id/duration"
        android:layout_alignStart="@+id/duration"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:id="@+id/ingredientslist"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/textzutaten"
        android:layout_alignLeft="@+id/textzubereitung"
        android:layout_alignStart="@+id/textzubereitung"
        android:layout_marginLeft="0dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kochdauer"
        android:id="@+id/duration"
        android:textSize="23dp"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Zubereitung"
        android:id="@+id/textzubereitung"
        android:layout_below="@+id/ingredientslist"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="23dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/preparation"
        android:layout_below="@+id/textzubereitung"
        android:layout_alignLeft="@+id/textzubereitung"
        android:layout_alignStart="@+id/textzubereitung"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_alignLeft="@+id/duration"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_alignRight="@+id/textzutaten"
        android:layout_alignEnd="@+id/textzutaten"
        android:layout_marginRight="20dp"
        android:minHeight="200dp"
        android:layout_marginTop="15dp" />

</RelativeLayout>
</ScrollView>